@{
    ViewBag.Title = "Form";
}



<div class="container" id="header">
    <br>
    <br>
            <div class="row">
            <div class="col-md-3">
                <label for="validationDefault01" class="form-label">First name</label>
                <input type="text" class="form-control" id="txt_firstName" placeholder="firstName" required>
            </div>
            <div class="col-md-3">
                <label for="validationDefault02" class="form-label">Last name</label>
                <input type="text" class="form-control" id="txt_lastname" placeholder="lastName" required>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label for="inputstate" class="form-label">Gender</label>
                <select id="gender" class="form-control">
                    <option selected>Male</option>
                    <option>Female</option>
                    <option>Other</option>
                </select>
            </div>


            <div class="col-md-3">
                <label for="inputState" class="form-label">Courses</label>
                <select id="course" class="form-control">
                    <option selected>BCA</option>
                    <option>BCOM</option>
                    <option>BSC</option>
                    <option>BSIF</option>

                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <label for="inputEmail4" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" placeholder="eg:abc@gmail.com">
            </div>
            <div class="col-md-3">
                <label for="inputPassword4" class="form-label">Password</label>
                <input type="password" class="form-control" id="password">
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label for="inputAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" placeholder="1234 Main St">
            </div>

            <div class="col-3">
                <label for="inputAddress2" class="form-label">Address 2</label>
                <input type="text" class="form-control" id="Address2" placeholder="Apartment, studio, or floor">
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label for="inputCity" class="form-label">City</label>
                <input type="text" class="form-control" id="city" placeholder="eg:Panipat">
            </div>
            <div class="col-md-3">
                <label for="inputstate" class="form-label">state</label>
                <input type="text" class="form-control" id="state" placeholder="eg:Haryana">
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label for="validationDefault01" class="form-label">Phone no:</label>
                <input type="number" class ="form-control"  id="num" required />
            </div>
            <div class="col-md-2">
                <label for="inputZip" class="form-label">Zip</label>
                <input type="text" class="form-control" id="zip">
            </div>
        </div>
        <br>
        <br>
        <div class="row">
            <div class="col-12">
               <button type="submit" id="btn_save" class="btn btn-primary">Submit</button>
            </div>
        </div>
<br />
        <br />
        <br />

    
</div>
<script>
    $(document).ready(function () {
        $('#btn_save').click(function () {
            debugger;
            alert(1);
            var data = {
                "firstname": $("#txt_firstName").val(),
                "lastname": $("#txt_lastname").val(),
                "gender": $("#gender").val(),
                "course": $("#course").val(),
                "email": $("#Email").val(),
                "password": $("#password").val(),
                "address1": $("#address").val(),
                "address2": $("#Address2").val(),
                "city": $("#city").val(),
                "state": $("#state").val(),
                "phone": $("#num").val(),
                "zip": $("#zip").val()
            };


            //string firstname , string lastname ,string gender, string course ,string email, string password,string address1, string address2,string city, string state,int phone, int zip

            $.ajax({
                url: "/Home/form_1",
                type: "POST",
                data: JSON.stringify(data),
                dataType: "json",
                contentType: "application/json",
                success: function (response) {
                    if (response === 1) {
                        alert("Data save successfully.");
                    }
                    else {
                        alert("Data not save successfully.");
                    }
                },
                error: function (xhr, textStatus, error) {
                    console.log(xhr.statusText);
                    console.log(textStatus);
                    console.log(error);
                }
            });
        });
    });
    </script>